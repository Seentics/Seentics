# Root environment example for Open Source Analytics Platform



# Frontend (Next.js)
NEXT_PUBLIC_API_BASE_URL=http://localhost:8080/api/v1
# Email configuration (optional)
RESEND_API_KEY=
RESEND_FROM=onboarding@yourdomain.com
SUPPORT_EMAIL=support@yourdomain.com

# API Gateway (Go)
API_GATEWAY_PORT=8080
USER_SERVICE_URL=http://user-service:3001
ANALYTICS_SERVICE_URL=http://analytics-service:3002
WORKFLOW_SERVICE_URL=http://workflows-service:3003
REDIS_URL=redis://redis:6379

# Users Service (Node)
USER_SERVICE_PORT=3001
USER_MONGODB_URI=mongodb://mongodb:27017/analytics_users
GLOBAL_API_KEY=global_service_api_key_change_me
USER_JWT_SECRET=change_me
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=change_me_refresh
JWT_REFRESH_EXPIRE=30d
FRONTEND_URL=http://localhost:3000
CORS_ORIGIN=http://localhost:3000

# OAuth (optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# Analytics Service (Go)
ANALYTICS_SERVICE_PORT=3002
DATABASE_URL=postgres://user:pass@timescaledb:5432/analytics?sslmode=disable
RETENTION_DAYS=30
MAX_DB_CONNECTIONS=100
BATCH_SIZE=1000
BATCH_TIMEOUT=5s
WORKER_COUNT=10
AGGREGATION_INTERVAL=24h
AGGREGATION_TIME=00:00

# Workflows Service (Node) - if used
WORKFLOW_SERVICE_PORT=3003
WORKFLOW_MONGODB_URI=mongodb://mongodb:27017/analytics_workflows
REDIS_URL=redis://redis:6379
JWT_SECRET=change_me

# Admin Service (Node) - if used
ADMIN_SERVICE_PORT=3005
DATABASE_URL=
REDIS_URL=redis://localhost:6379
JWT_SECRET=change_me
ADMIN_EMAILS=
FRONTEND_URL=http://localhost:3000

# TimescaleDB / Postgres (docker-compose)
POSTGRES_USER=user
POSTGRES_PASSWORD=pass
POSTGRES_DB=analytics

# Misc
LOG_LEVEL=info