# Root environment example for Open Source Analytics Platform

# Removed: Commercial billing integration (not needed for open source)
# LEMON_SQUEEZY_API_KEY=
# LEMON_SQUEEZY_WEBHOOK_SECRET=
# LEMON_SQUEEZY_STORE_ID=

# Frontend (Next.js)
NEXT_PUBLIC_API_BASE_URL=http://localhost:8080/api/v1
# Email configuration (optional)
RESEND_API_KEY=
RESEND_FROM=onboarding@yourdomain.com
SUPPORT_EMAIL=support@yourdomain.com

# API Gateway (Go)
API_GATEWAY_PORT=8080
USER_SERVICE_URL=http://localhost:3001/api/v1
ANALYTICS_SERVICE_URL=http://localhost:3002/api/v1
WORKFLOW_SERVICE_URL=http://localhost:3004/api/v1
ADMIN_SERVICE_URL=http://localhost:3005/api/v1
REDIS_URL=redis://localhost:6379

# Users Service (Node)
USER_SERVICE_PORT=3001
USER_MONGODB_URI=mongodb://localhost:27017/analytics_users
USER_JWT_SECRET=change_me
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=change_me_refresh
JWT_REFRESH_EXPIRE=30d
FRONTEND_URL=http://localhost:3000
CORS_ORIGIN=http://localhost:3000

# OAuth (optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# Analytics Service (Go)
ANALYTICS_SERVICE_PORT=3002
DATABASE_URL=postgres://user:pass@localhost:5432/analytics?sslmode=disable
RETENTION_DAYS=30
MAX_DB_CONNECTIONS=100
BATCH_SIZE=1000
BATCH_TIMEOUT=5s
WORKER_COUNT=10
AGGREGATION_INTERVAL=24h
AGGREGATION_TIME=00:00

# Workflows Service (Node) - if used
WORKFLOW_SERVICE_PORT=3004
WORKFLOW_MONGODB_URI=mongodb://localhost:27017/analytics_workflows
REDIS_URL=redis://localhost:6379
JWT_SECRET=change_me

# Admin Service (Node) - if used
ADMIN_SERVICE_PORT=3005
DATABASE_URL=
REDIS_URL=redis://localhost:6379
JWT_SECRET=change_me
ADMIN_EMAILS=
FRONTEND_URL=http://localhost:3000

# TimescaleDB / Postgres (docker-compose)
POSTGRES_USER=user
POSTGRES_PASSWORD=pass
POSTGRES_DB=analytics

# Misc
LOG_LEVEL=info