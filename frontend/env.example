# Seentics Frontend Environment Configuration
# Copy this file to .env.local and fill in your values

# =============================================================================
# API Configuration
# =============================================================================
# Base URL for the API Gateway (backend services)
NEXT_PUBLIC_API_URL=http://localhost:8080

# API Gateway URL for Next.js rewrites (should match NEXT_PUBLIC_API_URL)
API_GATEWAY_URL=http://localhost:8080

# =============================================================================
# Frontend Configuration
# =============================================================================
# Base URL for the frontend application
NEXT_PUBLIC_FRONTEND_URL=http://localhost:3000

# Default site ID for demo/fallback purposes
NEXT_PUBLIC_DEFAULT_SITE_ID=

# =============================================================================
# Support & Contact Configuration
# =============================================================================
# Support email address (shown to users)
NEXT_PUBLIC_SUPPORT_EMAIL=support@seentics.com

# From email for support emails (Resend configuration)
NEXT_PUBLIC_RESEND_FROM_EMAIL=noreply@seentics.com

# Support email for backend (Resend configuration)
SUPPORT_EMAIL=support@seentics.com

# From email for backend (Resend configuration)
RESEND_FROM=noreply@seentics.com

# =============================================================================
# Email Service Configuration
# =============================================================================
# Resend API key for sending emails
RESEND_API_KEY=your_resend_api_key_here

# =============================================================================
# OAuth Configuration
# =============================================================================
# OAuth redirect URI (usually matches NEXT_PUBLIC_FRONTEND_URL)
NEXT_PUBLIC_REDIRECT_URI=http://localhost:3000

# Google OAuth Client ID
NEXT_PUBLIC_GOOGLE_CLIENT_ID=your_google_client_id_here

# Google OAuth Client Secret (backend only)
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# GitHub OAuth Client ID
NEXT_PUBLIC_GITHUB_CLIENT_ID=your_github_client_id_here

# GitHub OAuth Client Secret (backend only)
GITHUB_CLIENT_SECRET=your_github_client_secret_here

# =============================================================================
# Feature Flags
# =============================================================================
# Enable/disable email support functionality
NEXT_PUBLIC_ENABLE_EMAIL_SUPPORT=true

# Enable/disable OAuth authentication
NEXT_PUBLIC_ENABLE_OAUTH=true

# Enable/disable analytics features
NEXT_PUBLIC_ENABLE_ANALYTICS=true

# Enable/disable funnel tracking
NEXT_PUBLIC_ENABLE_FUNNEL_TRACKING=true

# Enable/disable privacy features (GDPR compliance)
NEXT_PUBLIC_ENABLE_PRIVACY_FEATURES=true

# =============================================================================
# Build Information
# =============================================================================
# Application version
NEXT_PUBLIC_VERSION=1.0.0

# Build timestamp
NEXT_PUBLIC_BUILD_TIME=

# =============================================================================
# Development Configuration
# =============================================================================
# Disable email sending in development
EMAIL_DISABLED=false

# =============================================================================
# Notes
# =============================================================================
# - Variables prefixed with NEXT_PUBLIC_ are exposed to the browser
# - Variables without NEXT_PUBLIC_ are only available on the server
# - Never commit actual API keys or secrets to version control
# - Use different values for development, staging, and production
# - Update these values when deploying to different environments
